<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:text="Selecciona La Figura A Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/btnCuadrado"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cuadrado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/btnRombo"/>

    <ImageButton
            android:id="@+id/btnRombo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/rombo"
            app:layout_constraintStart_toEndOf="@id/btnCuadrado"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
            android:id="@+id/btnCirculo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/circulo"
            app:layout_constraintTop_toBottomOf="@id/btnCuadrado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

    <ImageButton
            android:id="@+id/btnRectangulo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/paralelo"
            app:layout_constraintTop_toBottomOf="@id/btnCirculo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
